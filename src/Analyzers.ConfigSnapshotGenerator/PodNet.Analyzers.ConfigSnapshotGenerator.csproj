<Project Sdk="Microsoft.NET.Sdk">
	
	<PropertyGroup>
		<TargetFramework>netstandard2.0</TargetFramework>
		<Description>A generator to ease diagnostics of incremental source generators. Source available for reference only.</Description>
		<PackageTags>PodNet, analyzers, source generator, diagnostics, awesome</PackageTags>
		<PodNetIncludeAnalyzerCore>false</PodNetIncludeAnalyzerCore>
	</PropertyGroup>

	<ItemGroup>
		<PackageReference Include="PodNet.Analyzers.Core" Version="1.0.14" PrivateAssets="all" />
		<PackageReference Include="PodNet.NuGet.Core" Version="1.0.5" PrivateAssets="all" />
		
		<Content Include="build/*" PackagePath="build" />
	</ItemGroup>

</Project>
